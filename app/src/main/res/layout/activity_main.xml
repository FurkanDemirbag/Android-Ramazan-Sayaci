<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.example.sem.ramazanprojesi.MainActivity">

    <include layout="@layout/ozelbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="02dp"
            android:layout_marginLeft="01dp"
            android:src="@drawable/assasin1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="276dp"
            android:layout_marginTop="02dp"
            android:src="@drawable/assasin2" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Şehir İsmi "
            android:id="@+id/txtSehir"
            android:textColor="#F9ac08"
            android:textSize="45dp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/corsiva"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="03dp"
            android:gravity="center_horizontal"
            android:text="Ramazan Sayacı"
            android:textColor="#F9ac08"
            android:textSize="30dp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Günün Sözü ;"
            android:textColor="#ff0004"
            android:textSize="25dp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/gununSozu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:gravity="center_horizontal"
            android:text="soz"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            android:fontFamily="@font/ubuntu"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:text="İftara Kalan Süre"
            android:textStyle="italic|bold"
            android:textColor="#ff000d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/moon"/>

        <TextView
            android:id="@+id/txIftarVakti"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:text="10 Gün 12:59:59"
            android:textStyle="italic|bold"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corsiva"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:src="@drawable/vampir2" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="05dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:text="Sahura Kalan Süre"
            android:textStyle="italic|bold"
            android:textColor="#ff0004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/moon"/>

        <TextView
            android:id="@+id/txSahurVakti"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:text="10 Gün 12:59:59"
            android:textStyle="italic|bold"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corsiva"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_gravity="right"
            android:src="@drawable/batman1"
            android:layout_marginRight="50dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

</LinearLayout>
