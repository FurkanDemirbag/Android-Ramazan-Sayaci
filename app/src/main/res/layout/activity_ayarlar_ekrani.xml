<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sem.ramazanprojesi.ayarlarEkrani"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:clickable="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/geriDonn"
        android:layout_margin="20dp"
        android:src="@drawable/batman1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"
        android:text="Lokasyon :"
        android:textColor="#e9a69b"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/regular"/>

        <Spinner
            android:id="@+id/spLokasyon"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/regular"
            android:textSize="10dp"
            android:textStyle="bold|italic">

        </Spinner>

    </LinearLayout>

    <Switch
        android:id="@+id/swIftar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:layout_gravity="center"
        android:text="İftara 10 dk Kala Bildirim Gönder     "
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"
        android:textSize="17dp"
        android:textColor="#e9a69b"
        android:fontFamily="regular"
        android:textOff="Off"
        android:textOn="On"/>

    <Switch
        android:id="@+id/swSahur"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:layout_gravity="center"
        android:text="Sahura 10 dk Kala Bildirim Gönder    "
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"
        android:textSize="17dp"
        android:textColor="#e9a69b"
        android:fontFamily="regular"
        android:textOff="Off"
        android:textOn="On"/>

    <Button
        android:id="@+id/btnAyarlariKaydet"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/gecislirenkk"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="Ayarları Kaydet"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

</LinearLayout>
